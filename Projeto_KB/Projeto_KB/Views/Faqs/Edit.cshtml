@model Projeto_KB.Models.Faq

@{
    ViewBag.Title = "Edit";
}


<div class="FaqBody">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()<!--Data provide for our machine-->
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h3 class="new">Edit Faq</h3>
        <div class="form-inline">
            <div class="form-group form-group">
                <span class="headers">@Html.LabelFor(model => model.SubjectID, "Subject", htmlAttributes: new { @class = "control-label" })</span>
                @Html.DropDownList("SubjectID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SubjectID, "", new { @class = "text-danger" })

            </div>
            <div class="form-group form-group">
                <span class="headers">
                    @Html.LabelFor(model => model.TopicID, "Topic", htmlAttributes: new { @class = "control-label" })
                </span>
                @Html.DropDownList("TopicID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TopicID, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <div class="form-horizontal">
            <div class="form-group form-group">
                <span class="headers">
                    @Html.LabelFor(model => model.Question, htmlAttributes: new { @class = "control-label col-md-2" })
                </span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Question, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Question, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group form-group">
                <span class="headers">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                </span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "from-control", @cols = 100 } })
                    <!--para ficar com Box de inserção no modelo colocar MultiLine, retirar as colunas e colocar Css com classe apropriada-->
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group form-group">
                <span class="headers">
                    @Html.LabelFor(model => model.Answer, htmlAttributes: new { @class = "control-label col-md-2" })
                </span>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Answer, new { @id = "editor1", @name = "editor1" })
                    <script type="text/javascript">
                        CKEDITOR.replace('editor1', {
                            filebrowserImageBrowseUrl: '/home/uploadPartial',
                            filebrowserImageUploadUrl: '/home/uploadnow'
                        });</script>
                    @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group form-group-sm">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit FAQ" class="btn btn-info btn-xs" />
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Faq List", "Index")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


