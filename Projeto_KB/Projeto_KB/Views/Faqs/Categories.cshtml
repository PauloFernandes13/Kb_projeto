@model IEnumerable<Projeto_KB.Models.Subject>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title  Customer Success</title>
    <script type="text/javascript" src="http://localhost:61495/ckeditor/ckeditor.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>


@{Layout = null;

}
<div class="CategoryBody">
    <div class="row">
        <div class="col-xs-6">
        <p>
            <a class="picture" href="@Url.Action("Index", "Home")">
                <img src="~/Content/Photo/logo-bullet-solutions.png" style="max-width:140px; margin-top:-7px" />
            </a>
        </p>
    </div>
    <div class="col-xs-6">
        <form class="create" method="get" action="@Url.Action("SearchFaq", "Faqs")">
            <div class="inner-addon right-addon">
                <i class="glyphicon glyphicon-search"></i>
                <input type="text" class="form-control" placeholder="Search" name="SearchFaqs" />
            </div>
        </form>
    </div>
  </div>
    <h3>Help When you Need It</h3>
    <h6>Got a problem? Here we can help you. </h6>
    <h4>Categories</h4>
    <div class="row text-center">

        @foreach (var subjects in Model)
            {
            <div class="col-md-3 col-sm-6" subject-feature>
                <div class="thumbnail">
                    <div class="caption">
                        <!--<h4><a href="~/Faqs/Description?id=@*subjects.ID">@subjects.Name*@</a></h4>-->

                        <h4>@Html.ActionLink(subjects.Name, "Description", new { ID = subjects.ID }, null)</h4>
                    </div>
                </div>

            </div>
           }
    </div>
</div>       