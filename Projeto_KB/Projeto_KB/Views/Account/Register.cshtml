@model Projeto_KB.Models.RegisterViewModel
@{
    ViewBag.Title = "New User Registration";
}

<h2 class="log" style="text-align:center">@ViewBag.Title</h2>
<div class="row">
    <div class="col-xs-12">
        <section id="loginForm" align="center">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4 class="questionSearch">Account Credencials</h4>
                <hr />
                <div class="form-group">
                    <div class="col-sm-4 col-sm-push-4">
                        @Html.TextBoxFor(m => m.UserName, new { placeholder = "User", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-push-4">
                        @Html.DropDownListFor(m => m.RoleName, new SelectList(ViewBag.Roles, "Value", "Text"), "Select Role" , new { placeholder = "Select a Role", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-push-4">
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-push-4">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <hr class="login" width="50%">
                <h4 class="questionSearch">Adicional Information</h4>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-push-4">
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-push-4">
                        @Html.TextBoxFor(m => m.AccountName, new { placeholder = "Account", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.AccountName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-push-4">
                        @Html.TextBoxFor(m => m.ContactName, new { placeholder = "Contact Name", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ContactName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-push-4">
                        @Html.TextBoxFor(m => m.Country, new { placeholder = "Country", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Country, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-push-4">
                        <input type="submit" class="btn btn-info btn-sm" value="Submit" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

