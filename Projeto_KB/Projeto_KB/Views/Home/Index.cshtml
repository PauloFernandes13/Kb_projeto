@{
    ViewBag.Title = "Home Page";
}
<head>
    <script>
        function journeyLevelTwo() {
            document.getElementById("journeyTwo").innerHTML = "To have access to New Best Contents you need to <strong>finish all steps</strong> from your <strong>Journey Level One</strong>";
        }
    </script>
    <script>
        function journeyLevelThree() {
            document.getElementById("journeyThree").innerHTML = "To have access to New Best Contents you need to <strong>finish all steps</strong> from your <strong>Journey Level Two</strong>";
        }
    </script>
</head>
@{Layout = null;
}

@Styles.Render("~/Content/Template")

<body id="page-top">
    <!-- Navigation -->
    <nav class="navbar fixed-top navbar-toggleable-md navbar-inverse" id="mainNav">
        <div class="container">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="~/Content/Photo/logo-bullet-solutions-inv@2x.png" style="max-width:100px;"></a>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#portfolio">Journey</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Categories", "Faqs")">FAQs</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Details", "Concepts", new { Id = 2 })">BEST</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contact</a>
                    </li>
                    <!--<li class="nav-item">
                        <a class="nav-link" href="#about">About</a>
                    </li>-->
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "User")">Admin</a>
                        </li>
                    }
                    else if (User.IsInRole("Manager"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Faqs")">Manager</a>
                        </li>

                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <header class="masthead">
        <div class="container">
            <div class="intro-text">
                <div class="intro-lead-in">Customer Success</div>
                <div class="intro-heading"><small>YOUR Success is OUR Success</small></div>
                <a href="#portfolio" class="btn btn-xl">Your Journey</a>
            </div>
        </div>
    </header>

    <section class="bg-faded" id="portfolio">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Welcome to Your Journey</h2>
                    <h3 class="section-subheading text-muted">All Steps to Implementacion</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-sm-6 portfolio-item">
                    <div class="portfolio-link" data-toggle="modal" href="#portfolioModal1">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fa fa-plus fa-3x"></i>
                            </div>
                        </div>
                        <img class="img-fluid" src="~/Content/Template/img/portfolio/Install.jpg" alt="">
                    </div>
                    <div class="portfolio-caption">
                        <h4>Level 1</h4>
                        <p class="text-muted">Install & Data Importacion </p>

                    </div>
                </div>
                <div class="col-md-4 col-sm-6 portfolio-item">
                    <div class="portfolio-link" data-toggle="modal" href="#portfolioModal2">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fa fa-plus fa-3x"></i>
                            </div>
                        </div>
                        <img class="img-fluid" src="~/Content/Template/img/portfolio/Timetabler.jpg" alt="">
                    </div>
                    <div class="portfolio-caption">
                        <h4>Level 2</h4>
                        <p class="text-muted">Automatic Schedule Generation</p>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6 portfolio-item">
                    <div class="portfolio-link" data-toggle="modal" href="#portfolioModal3">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fa fa-plus fa-3x"></i>
                            </div>
                        </div>
                        <img class="img-fluid" src="~/Content/Template/img/portfolio/CalendarNew.jpg" alt="">
                    </div>
                    <div class="portfolio-caption">
                        <h4>Level 3</h4>
                        <p class="text-muted">Schedule Adjustments and Visualization</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--Modal Journey 1-->
    <div class="portfolio-modal modal fade" id="portfolioModal1" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="close-modal" data-dismiss="modal">
                    <div class="lr">
                        <div class="rl">
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 offset-lg-2">
                            <div class="modal-body">
                                <!-- Project Details Go Here -->
                                <h2 style="color:#fed136">Install & Data Importacion</h2>
                                <p class="item-intro text-muted" style="color:#444040">The first step will be to import your institution’s data into Bullet TimeTabler, the schedule generator.</p>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <img class="img-fluid d-block mx-auto" src="~/Content/Images/xml-file.jpg" width="195" height="195" />
                                    </div>
                                    <div class="col-sm-6">
                                        <img class="img-fluid d-block mx-auto" src="~/Content/Images/CsvOne.png" width="195" height="195" />
                                    </div>
                                </div>
                                <p id="teste">Four files must be filled with information about <strong>General Data</strong>, <strong>Curriculum</strong>, <strong>Entities</strong> and <strong>Classes</strong>.</p>
                                <ul class="list-inline">
                                    <li>I)	Importation by XML</li>
                                    <li>II)	Importation by XLS (excel files)</li>
                                </ul>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a href="@Url.Action("Details", "Concepts", new { Id = 2 })" class="btn btn-primary"><i class="fa fa-times"></i>Best Concepts</a>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal 2 -->
    <div class="portfolio-modal modal fade" id="portfolioModal2" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="close-modal" data-dismiss="modal">
                    <div class="lr">
                        <div class="rl">
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 offset-lg-2">
                            <div class="modal-body">
                                <!-- Project Details Go Here -->
                                <h2 style="color:#fed136">Automatic Schedule Generation</h2>
                                <p class="item-intro text-muted" style="color:#444040">Bullet TimeTabler Education is a product for generating school timetables, fully automatic and optimized, targeted to the Education.</p>
                                <img class="img-fluid d-block mx-auto" src="~/Content/Template/img/portfolio/Optimezed.JPG" width="500" height="300" />
                                <p id="teste">Easy handling conciliates and <strong>optimizes several objectives</strong> in accordance with the interests of the Institution, academic staff, students, and physical resources (classrooms, materials, etc.).</p>
                                <ul class="list-inline">
                                    <li>Optimized management of timetables and resources;</li>
                                    <li>Relieving human resources for other productive projects.</li>
                                </ul>
                                <p class="modelP" id="journeyTwo"></p>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    if (User.IsInRole("Client_1"))
                                    {
                                        <button onclick="journeyLevelTwo()" class="btn btn-primary"><i class="fa fa-times"></i>Best Concepts</button>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Details", "Concepts", new { Id = 2 })" class="btn btn-primary"><i class="fa fa-times"></i>Best Concepts</a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal 3 -->
    <div class="portfolio-modal modal fade" id="portfolioModal3" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="close-modal" data-dismiss="modal">
                    <div class="lr">
                        <div class="rl">
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 offset-lg-2">
                            <div class="modal-body">
                                <!-- Project Details Go Here -->
                                <h2 style="color:#fed136">Schedule Adjustments and Visualization</h2>
                                <p class="item-intro text-muted" style="color:#444040">Bullet Calendar is a decision support system, which enables the daily management of all activities in the Institution (lessons and occasional events).</p>
                                <img class="img-fluid d-block mx-auto" src="~/Content/Template/img/portfolio/BC.JPG" width="500" height="300" />
                                <p id="teste">It works as a schedule/agenda that <strong>controls resources occupation</strong> (academic staff, student groups and classrooms), communicating with all the remaining BEST applications.</p>
                                <ul class="list-inline">
                                    <li>Flexible agenda, with easy parameterization;</li>
                                    <li>Efficient daily management of events and resources through a decision support system;</li>
                                    <li>Real-time information about the occupation of the resources.</li>
                                </ul>
                                <p class="modelP" id="journeyThree"></p>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    if (User.IsInRole("Client_1") || User.IsInRole("Client_2"))
                                    {
                                        <button onclick="journeyLevelThree()" class="btn btn-primary"><i class="fa fa-times"></i>Best Concepts</button>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Details", "Concepts", new { Id = 2 })" class="btn btn-primary"><i class="fa fa-times"></i>Best Concepts</a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Contact Us</h2>
                    <h3 class="section-subheading text-muted"></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <form id="contactForm" name="sentMessage" novalidate>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input class="form-control" id="name" type="text" placeholder="Your Name *" required data-validation-required-message="Please enter your name.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" id="email" type="email" placeholder="Your Email *" required data-validation-required-message="Please enter your email address.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" id="phone" type="tel" placeholder="Your Phone *" required data-validation-required-message="Please enter your phone number.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <textarea class="form-control" id="message" placeholder="Your Message *" required data-validation-required-message="Please enter a message."></textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button class="btn btn-xl" type="submit">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <span class="copyright">Customer Success Department</span>
                </div>
                <div class="col-md-4">

                </div>
                <div class="col-md-4">
                    <ul class="list-inline quicklinks">
                        <li class="list-inline-item">
                            <a href="#">Powered by</a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#">BULLET SOLUTIONS</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/Template/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/Template/vendor/tether/tether.min.js"></script>
    <script src="~/Content/Template/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!-- Plugin JavaScript -->
    <script src="~/Content/Template/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for this template -->
    <script src="~/Content/Template/js/agency.min.js"></script>

</body>
