@{Layout = "~/Views/Shared/_ConceptsLayout.cshtml";}

<body>
    <div class="CreateConcept">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h3 class="new">New Concept</h3>
            <div class="form-inline">
                <div class="form-group form-group sm">
                    <span class="headers2">@Html.LabelFor(model => model.JourneyID, "Journey", htmlAttributes: new { @class = "control-label" })</span>
                    <div>
                        <div class="col-md-10">
                            @Html.DropDownList("JourneyID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.JourneyID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-inline form-group-sm">
                    <span class="headers2"> @Html.LabelFor(model => model.PhaseID, "Etapa", htmlAttributes: new { @class = "control-label" })</span>
                    <div>
                        <div class="col-md-10">
                            @Html.DropDownList("PhaseID", null,htmlAttributes: new { @class = "form-control", @id="selectPhase"})
                            @Html.ValidationMessageFor(model => model.PhaseID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-inline form-group-sm">
                    <span class="headers2">@Html.LabelFor(model => model.TopicConceptID, "Tópico", htmlAttributes: new { @class = "control-label" })</span>
                    <div>
                        <div class="col-md-10">
                            @Html.DropDownList("TopicConceptID", null,"", htmlAttributes: new { @class = "form-control", @id="selectTopic" })
                            @Html.ValidationMessageFor(model => model.TopicConceptID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <hr />
                <div class="form-horizontal">
                    <div class="form-group">
                        <span class="headers2">
                            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                        </span>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <span class="headers2">
                            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
                        </span>
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Text, new { @id = "editor1", @name = "editor1" })
                            <script type="text/javascript">
                                CKEDITOR.replace('editor1', {
                                    filebrowserImageBrowseUrl: '/home/uploadPartial',
                                    filebrowserImageUploadUrl: '/home/uploadnow'
                                });</script>
                            @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <span class="headers2">
                            @Html.LabelFor(model => model.ContentDate, htmlAttributes: new { @class = "control-label col-md-2" })
                        </span>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ContentDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ContentDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <span class="headers2">
                            @Html.LabelFor(model => model.Order, htmlAttributes: new { @class = "control-label col-md-2" })
                        </span>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Order, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Order, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Insert" class="btn btn-info button-small" />
                        </div>
                    </div>
                </div>
        }


    </div>
    <p><div>
        <i class="fa fa-list"> @Html.ActionLink("  BEST Concepts List", "Index")</i>
    </div><p/>
   
</body>



    
