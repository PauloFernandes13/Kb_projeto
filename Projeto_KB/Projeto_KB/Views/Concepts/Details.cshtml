@model Projeto_KB.Models.Concept
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title  Customer Success</title>
</head>

@{Layout = "~/Views/Shared/_Concepts.cshtml";}

<ol class="breadcrumb">
    <li class="breadcrumb-item">@Html.DisplayFor(model => model.Journey.Name)</li>
    <li class="breadcrumb-item">@Html.DisplayFor(model => model.Subject.Name)</li>
    <li class="breadcrumb-item active">@Html.DisplayFor(model => model.Topic.Name)</li>
</ol>
<div class="ConceptBody">
    
    <h2>@Html.DisplayFor(model => model.Title)</h2>
    
    <dl class="dl-horizontal">

        <dd>
            @Html.Raw(Model.Text)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>






















