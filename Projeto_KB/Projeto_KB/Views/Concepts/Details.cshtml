@model Projeto_KB.Models.Concept
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title  Customer Success</title>
</head>

@{Layout = "~/Views/Shared/_Concepts.cshtml";}
<div>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.DisplayFor(model => model.Journey.Name)</li>
        <li class="breadcrumb-item">@Html.DisplayFor(model => model.Phase.Name)</li>
        <li class="breadcrumb-item active">@Html.DisplayFor(model => model.TopicConcept.Name)</li>
    </ol>
    <div class="ConceptBody">

        <h2>@Html.DisplayFor(model => model.Title)</h2>

        <dl class="dl-horizontal">

            <dd>
                @Html.Raw(Model.Text)
            </dd>

        </dl>
    </div>
</div>






















